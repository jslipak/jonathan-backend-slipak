<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Precio</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Acciones</th>
            
        </tr>
    </thead>
    <tbody>
        <% data.forEach(function(product) { %>
        <tr>
            <th scope="row"><a href="/api/productos/<%- product.id %>"><%- product.id %></a></th>
            <td><%- product.title %></td>
            <td><%- product.price %></td>
            <td><%- product.thumbnail %></td>
            <td>
                <a href="/api/productos/edit/<%- product.id %>">Edit</a>
                <a href="/api/productos"   onclick="borrarProducto(<%- product.id %>)">Borrar</a>

            </td>
        </tr>
        <% }) %> 
    </tbody>
</table>
<script>
    function borrarProducto(id) {
        fetch(`http://127.0.0.1:8080/api/productos/${id}`,
            {    method: "DELETE" })
        location.reload();
    }
</script>
