                        <input name='lastName' placeholder="lastname" class="form-control" type="text"
                            required>
                    </div>

                    <div class="form-group">
                        <input name='email' placeholder="email" class="form-control" type="email" required>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-success my-3" type="submit" value="Registrate">
